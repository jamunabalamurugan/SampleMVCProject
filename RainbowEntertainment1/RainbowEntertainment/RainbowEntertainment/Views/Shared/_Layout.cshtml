<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title></title>
          <link href="@Url.Content("~/Content/homepage.css")" rel="stylesheet" type="text/css" />
           <script src="~/Scripts/_LayoutBanner.js"></script>
        <script src="~/Scripts/jquery-1.7.1.js"></script>
        <script src="~/Scripts/jquery-ui-1.8.20.js"></script>
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body style="background-color: #58d8f1; margin: 0px; font-family: Arial, Helvetica, sans-serif;">
          <div>
        <table style="width: 100%;" border="0">
            <tr>
                <td style="background-image: url(images/header_bg.jpg); background-repeat: repeat-x; height: 200px">
                    <table style="width: 100%;" border="0">
                        <tr>
                            <td style="width: 261px; height: 200px; vertical-align: top">
                                <img src="../../images/movieroll.png" width="261" height="190" /></td>
                            <td style="text-align: center; vertical-align: bottom; font-size: 36px; font-weight: bold; color: #003876; text-align: center; font: century;">Rainbow Entertainment<br />
                            </td>
                            <td style="width: 312px; text-align: right; vertical-align: bottom">
                                <img src="../../images/umbrella.png" width="312" height="173" /></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td style="height: 35px; background-color: #df0005; padding-left: 10%"><b style="color: #f5eb8e; font-size: medium; width: 200px"><span id="message">Book your movie tickets online with special deals!!! </span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  @Html.ActionLink("Home", "Index", "Home") |
                
                  @Html.ActionLink("About Us", "About", "Home") |
                  @Html.ActionLink("Contact Us", "Contact", "Home") |
                    @Html.ActionLink("Movies", "Index", "Movie") |
@Html.ActionLink("Search Movies", "Search", "Movie")                 
                </b>
            </tr>
            <tr>
                <td>
                    <table style="width: 100%;" border="0">
                        <tr>
                            <td>&nbsp;</td>
                            <td style="background-color: #FFFFFF">
                                <table style="width: 98%;" border="0">
                                    <tr>
                                        <td style="vertical-align: top; width:80%">

                                            @RenderBody()

                                            <p>&nbsp;</p>
                                        </td>
                                        <td style="width: 20%; text-align: left; vertical-align: top; background-color: #fef814">
                                            
                                            <p id="banner">
                                                <img  id="image" width="225" height="268" src="../../Images/SideBanner/3.jpg" />
                                               </p>

                                            @if (IsSectionDefined("featured"))
                                            {
                                                @RenderSection("featured");
                                            }
                                            else
                                            {
                                                
                                                
                                                 <p style="padding-left: 10px;">
                                                 <strong>Enjoy Watching Movies with Rainbow Entertainment...!!!
                                                 <br /><br />
          

                                                    </strong>
                                                     </p>
                                                
                                                

                                                
                                                <br />
                                            }
                                            

                                    <tr>
                                </table>
                            </td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td style="width: 10%">&nbsp;</td>
                            <td style="text-align: right; font-size: 11px;">&copy;2013 Rainbow Entertainment. All rights reserved.</td>
                            <td style="width: 10%">&nbsp;</td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
        

        
        @RenderSection("scripts", required: false)
    </body>
</html>
